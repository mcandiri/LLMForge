<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>LLMForge</RootNamespace>
    <PackageId>LLMForge</PackageId>
    <Version>1.0.0</Version>
    <Authors>LLMForge Contributors</Authors>
    <Description>Production-grade LLM orchestration toolkit for .NET â€” send prompts to multiple models, validate responses, and select the best one.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>llm;ai;orchestration;openai;anthropic;gemini;ollama</PackageTags>
    <RepositoryUrl>https://github.com/llmforge/llmforge</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.2" />
